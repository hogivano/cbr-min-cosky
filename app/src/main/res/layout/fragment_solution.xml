<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteFa"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.SolutionFragment"
    android:padding="20dp">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/solution"
        android:id="@+id/img_solution"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:id="@+id/text_solution"
        android:text="Solution"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/img_solution"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_solution"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_solution"
        tools:listitem="@layout/item_solution"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add"
        app:layout_constraintTop_toBottomOf="@id/img_solution"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_add_white_24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>