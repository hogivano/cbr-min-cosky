<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteFa"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.HomeFragment"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/result"
            android:id="@+id/img_result"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:id="@+id/text_problem"
            android:text="Diagnosis Penyakit"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/img_result"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:id="@+id/p1"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/p2"
            app:layout_constraintTop_toBottomOf="@+id/text_problem"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@color/black70"
            android:textColor="@color/whiteFa"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="Gagal Jantung"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="17sp"
            android:textStyle="bold"
            android:id="@+id/p2"
            app:layout_constraintLeft_toRightOf="@+id/p1"
            app:layout_constraintTop_toBottomOf="@+id/text_problem"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/black70"
            android:textColor="@color/whiteFa"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="Serangan Jantung"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:id="@+id/text_find"
            android:text="Pilih Gejala yang Dialami"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/p2"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/rv_indication"
            app:layout_constraintTop_toBottomOf="@+id/text_find"
            tools:listitem="@layout/item_check"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="Cari"
            android:id="@+id/btn_find"
            android:textColor="@color/whiteFa"
            android:background="@color/colorPrimary"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_indication"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>