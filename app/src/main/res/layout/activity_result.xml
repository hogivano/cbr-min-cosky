<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="30dp"
    android:paddingHorizontal="20dp"
    tools:context=".ResultActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HASIL"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/text_result"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/img_result"
        android:src="@drawable/result_icon"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/text_result"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GAGAL JANTUNG"
        android:textStyle="bold"
        android:id="@+id/text_solution"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/img_result"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:id="@+id/result"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="Kasus anda mirip dengan kasus C4 (Keringat Dingin, Nyeri Dada, Kelainan Bunyi Jantung)"
        app:layout_constraintTop_toBottomOf="@+id/text_solution"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:textAlignment="center"
        android:textSize="15sp"
        android:paddingVertical="10dp"
        android:id="@+id/btn_back"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/result"/>
</androidx.constraintlayout.widget.ConstraintLayout>