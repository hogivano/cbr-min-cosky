<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteFa"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.IndicationFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/solution"
            android:id="@+id/img_solution"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:id="@+id/text_solution"
            android:text="Indication"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/img_solution"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_head"
            android:background="@color/black70"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/text_solution">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout_content"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Code"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/whiteFa"
                    android:layout_weight="0.2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indication"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/whiteFa"
                    android:gravity="left"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/whiteFa"
                    android:gravity="right"
                    android:layout_weight=".3"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rv_indication"
            android:paddingBottom="10dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@+id/layout_head"
            tools:listitem="@layout/item_indication"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>